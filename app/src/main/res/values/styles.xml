<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="film_detail_text_view_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/middle_margin</item>
        <item name="android:layout_marginTop">@dimen/middle_margin</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="film_detail_text_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/middle_margin</item>
        <item name="android:layout_marginTop">@dimen/middle_margin</item>
        <item name="android:layout_marginEnd">@dimen/middle_margin</item>
    </style>

    <style name="separator_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/separator_height_size</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>